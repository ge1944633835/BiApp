<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/len_10">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_56"
        android:text="@string/label_register_sign_up"
        android:textColor="#c5c5c5"
        android:textSize="@dimen/font_12" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_10"
        android:text="@string/label_register_phone"
        android:textColor="#57EFD4"
        android:textSize="@dimen/font_16" />


    <ImageView
        android:id="@+id/register_img_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/len_10"
        android:src="@mipmap/ic_register_photo" />


    <net.qiujuer.genius.ui.widget.Button
        android:id="@+id/register_tv_jump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/len_10"
        android:background="@drawable/bg_round_cyan_boder"
        android:paddingBottom="@dimen/len_10"
        android:paddingLeft="@dimen/len_28"
        android:paddingRight="@dimen/len_28"
        android:paddingTop="@dimen/len_10"
        android:text="@string/label_register_jump"
        android:textColor="#57F1D3"
        android:textStyle="bold"
        android:textSize="@dimen/font_14"
        app:gFont="roboto.ttf"
        app:gTouchColor="#FF399483"
        app:gTouchCornerRadius="@dimen/len_10"
        app:gTouchDurationRate="0.7"
        app:gTouchEffect="ripple" />

</LinearLayout>
