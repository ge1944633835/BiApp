<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/len_10">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_40"
        android:text="@string/label_register_sign_up"
        android:textColor="#c5c5c5"
        android:textSize="@dimen/font_12" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_10"
        android:text="@string/label_register_phone"
        android:textColor="#9320f8"
        android:textSize="@dimen/font_16" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_10">

        <EditText
            android:id="@+id/fragment_register_et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_register_phone_hint"
            android:inputType="phone"
            android:maxLength="11"
            android:theme="@style/MyEditText" />

        <ImageView
            android:id="@+id/fragment_register_img_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_register_one_next" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/ic_register_rect"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/ic_register_rect"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/ic_register_rect"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/ic_register_rect"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1" />

    </LinearLayout>

    <TextView
        android:textColor="#F5054F"
        android:textSize="@dimen/font_10"
        android:layout_marginTop="@dimen/len_10"
        android:text="@string/label_register_wrong_code"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#5CA7E5"
        android:textSize="@dimen/font_14"
        android:layout_marginTop="@dimen/len_10"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_register_resend_code" />

</LinearLayout>
