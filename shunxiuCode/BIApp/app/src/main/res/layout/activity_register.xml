<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.account.RegisterActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/len_10"
        android:layout_marginTop="@dimen/len_20"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/register_img_point_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_register_point_one" />

        <ImageView
            android:id="@+id/register_img_point_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/len_6"
            android:src="@mipmap/ic_register_point_normal" />

        <ImageView
            android:id="@+id/register_img_point_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/len_6"
            android:src="@mipmap/ic_register_point_normal" />

        <ImageView
            android:id="@+id/register_img_point_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/len_6"
            android:src="@mipmap/ic_register_point_normal" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/register_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
