<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.account.RegisterCompleteActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/len_20"
        android:src="@mipmap/ic_register_complete_logo" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/len_10"
        android:text="@string/label_register_complete"
        android:textColor="#7078F7" />

    <net.qiujuer.genius.ui.widget.Button
        android:id="@+id/register_tv_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/len_20"
        android:layout_marginRight="@dimen/len_20"
        android:layout_marginTop="@dimen/len_40"
        android:background="@drawable/bg_round_blue_boder"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/len_10"
        android:paddingTop="@dimen/len_10"
        android:text="@string/label_register_complete_begin"
        android:textColor="#7078F7"
        android:textSize="@dimen/font_14"
        android:textStyle="bold"
        app:gFont="roboto.ttf"
        app:gTouchColor="#FF424CE9"
        app:gTouchCornerRadius="@dimen/len_10"
        app:gTouchDurationRate="0.7"
        app:gTouchEffect="ripple" />


</LinearLayout>
